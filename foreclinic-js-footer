<!-- foreClinic -->
<script src="js/foreclinic.js?=v=1.2.10"></script>

<!-- Show or hide options in Pricing (translate text "Más" and "Menos") -->
<script>
	$(document).ready(function(){
		var $textMore = "<?php echo _("Más"); ?>";
		var $textLess = "<?php echo _("Menos"); ?>";
		$('li.more-features a').on('click', function(event){
		  	event.preventDefault();
		  	$(this).toggleClass("hide-features");
		  	$(this).closest('ul').find('.hidden-features').toggle();
		  	$(this).text(function(i, text){
		        return text === $textMore ? $textLess : $textMore;
		    });
		});
	});
</script>
